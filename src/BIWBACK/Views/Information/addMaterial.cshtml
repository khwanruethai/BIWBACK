@{
    Layout = "_Layout";
}
<link href="~/lib/dist/css/skins/_all-skins.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/plugins/iCheck/all.css">
<section class="content-header">
    <h1>
        วัตถุดิบ
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> ข้อมูลหลัก</a> > </li>
        <li><a href="#"><i class="fa fa-dashboard"></i> วัตถุดิบ</a> ></li>
        <li><a href="#"><i class="fa fa-dashboard"></i> เพิ่มวัตถุดิบ</a> ></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">วัตถุดิบ</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <div class="box-body">
                    @{ Html.BeginForm("insert_mtr","Material",FormMethod.Post);}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รูปภาพวัตถุดิบ
                            </div>
                            <div class="col-sm-4 text-center">
                                <img id="img_emp" src="~/images/nopicture.jpg" height="150px" width="150px" /><br />
                                <br />
                                <input id="selectFile" name="selectFile" class="btn btn-primary form-control selectFile " type="file" value="อัพโหลดรูปภาพ" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ประเภทวัตถุดิบ
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_tm", ViewData["group_material"] as List<SelectListItem>, new { @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รหัสวัตถุุดิบ
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_code", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ชื่อวัตถุดิบ
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_name", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รายละเอียด
                            </div>
                            <div class="col-sm-4">
                                @Html.TextArea("mtr_detail", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                Serial No.
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_serial", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                               ที่เก็บ
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_shelf", ViewData["shelf"] as List<SelectListItem>, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                หน่วยรับ
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_unit_get", ViewData["unit"] as List<SelectListItem>, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                จำนวนจัดเก็บ (ยอดรับ x หน่วยเบิก)
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_keep_num", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                หน่วยเบิก
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_unit_expose",ViewData["unit"] as List<SelectListItem>, new { @class="form-control"})
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ความกว้าง
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_width", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ความยาว
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_long","",new { @class="form-control"})
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ระบุด้าน
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_side",new List<SelectListItem> {
                               new SelectListItem { Text="", Value="N"},
                               new SelectListItem { Text="ด้านขวา", Value="R"},
                               new SelectListItem { Text="ด้านซ้าย", Value="L"},
                           }, new { @class="form-control"})
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                หมุนกลับด้านได้
                            </div>
                            <div class="col-sm-4">
                                <input type="radio" value="Y" name="mtr_roll" id="mtr_roll" checked="checked"/>  ใช่
                                <input type="radio" value="N" name="mtr_roll" id="mtr_roll"/>  ไม่ใช่
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                แจ้งเตือนจุดสั้งซื้อ
                            </div>
                            <div class="col-sm-4">
                                <input type="radio" value="Y" name="mtr_noti" id="mtr_noti" checked="checked"/>  เปิด
                                <input type="radio" value="N" name="mtr_noti" id="mtr_noti"/>  ปิด
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                จำนวนขั้นต่ำ
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_noti_min","",new { @class="form-control"})<span>@Html.TextBox("mtr_min_unit", "หน่วย", new { @class = "form-control" ,@readonly = true})</span>
                            </div>
                            <div class="col-sm-2 text-right">
                                จำนวนสูงสุด
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("mtr_noti_max", "", new { @class = "form-control" })<span>@Html.TextBox("mtr_max_unit", "หน่วย", new { @class = "form-control", @readonly = true })</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                กลุ่มในสติ๊กเกอร์
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("mtr_sticker", ViewData["sticker"] as List<SelectListItem>, new { @class="form-control"})
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer text-center">
                        <button type="submit" class="btn btn-default">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary">บันทึกข้อมูล</button>
                    </div>
                    @{ Html.EndForm();}
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
<script src="~/lib/plugins/iCheck/icheck.min.js"></script>
<script src="~/lib/bower_components/moment/min/moment.min.js"></script>
<!-- SlimScroll -->
<script src="~/lib/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="~/lib/bower_components/fastclick/lib/fastclick.js"></script>
<script>
    //Flat red color scheme for iCheck
    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
        checkboxClass: 'icheckbox_flat-green',
        radioClass: 'iradio_flat-green'
    })

</script>
<script>
    $(document).on('change', '#mtr_unit_get', function () {


        var txt = $('#mtr_unit_get :selected').text();

        $('#mtr_min_unit').val(txt);
        $('#mtr_max_unit').val(txt);

    })
</script>
<script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();


                reader.onload = function(e) {
                    $('#img_emp').attr('src', e.target.result);

                }
                reader.readAsDataURL(input.files[0]);

            }

        }

        $(".selectFile").change(function() {
            readURL(this);
        });
</script>