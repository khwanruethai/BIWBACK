@{
    Layout = "_Layout";
}
<link href="~/lib/dist/css/skins/_all-skins.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/plugins/iCheck/all.css">
<section class="content-header">
    <h1>
        เพิ่มสินค้า
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> ข้อมูลหลัก</a> > </li>
        <li><a href="#"><i class="fa fa-dashboard"></i> วัตถุดิบ</a> ></li>
        <li><a href="#"><i class="fa fa-dashboard"></i>   เพิ่มสินค้า</a> ></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">วัตถุดิบ</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รูปภาพสินค้า
                            </div>
                            <div class="col-sm-4 text-center">
                                <img height="150px" width="150px" /><br />
                                <br />
                                <input class="btn btn-primary form-control" type="file" value="อัพโหลดรูปภาพ" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รหัส
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                กลุ่มสินค้ารายงาน
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("txt", new List<SelectListItem> { new SelectListItem { Text = "" } }, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                กลุ่มสินค้าขาย
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("txt", new List<SelectListItem> { new SelectListItem { Text = "" } }, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ชื่อสินค้า
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                หน่วย
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownList("txt", new List<SelectListItem> { new SelectListItem { Text = "" } }, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                สี
                            </div>
                            <div class="col-sm-4">
                                @Html.TextArea("txt", "", new { @class = "form-control", @row = "10" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ความกว้าง
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ความยาว
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                รายละเอียด
                            </div>
                            <div class="col-sm-10">
                                @Html.TextArea("txt", "", new { @class = "form-control" })
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ความกว้าง
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ความยาว
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 text-right">
                                ราคา:ตรม.
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 text-right">
                                ตรม.ขายขั้นต่ำ
                            </div>
                            <div class="col-sm-4">
                                @Html.TextBox("txt", "", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- /.box-body -->

                    <div class="box-footer text-center">
                        <button type="submit" class="btn btn-default">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary">บันทึกข้อมูล</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
<script src="~/lib/plugins/iCheck/icheck.min.js"></script>
<script src="~/lib/bower_components/moment/min/moment.min.js"></script>
<!-- SlimScroll -->
<script src="~/lib/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="~/lib/bower_components/fastclick/lib/fastclick.js"></script>
<script>
    //Flat red color scheme for iCheck
    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
        checkboxClass: 'icheckbox_flat-green',
        radioClass: 'iradio_flat-green'
    })

</script>