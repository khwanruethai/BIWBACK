@{
    Layout = "_Layout";
}
<!-- Content Header (Page header) -->
@using BIWBACK.Models
<section class="content-header">
    <h1>
        ตำแหน่ง
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> ข้อมูลหลัก</a></li>
        <li class="active">  ตำแหน่ง</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">  ตำแหน่ง </h3>
                </div>
                <!-- /.box-header -->
              <div class="form-group">
                  <div class="row">
                  <div class="col-md-8">
                        <div class="text-right">
                            <a class="btn btn-info"><i class="fa fa-print"></i> พิมพ์</a>
                        </div>
                  </div>
                  <div class="col-md-4">
                      <div class="text-right">
                          <a class="btn btn-primary" data-toggle="modal" data-target="#Mymodal"><i class="fa fa-plus-square-o"></i> เพิ่ม  ตำแหน่ง</a>
                          <br /><br />
                      </div>    
                  </div></div>
                
                 
                  </div>
                <div class="box-body">

                    <!--Modal-->
                    <div class="modal fade" id="Mymodal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title">เพิ่ม  ตำแหน่ง</h4>
                                </div>
                                <div class="modal-body">
                                    @{ Html.BeginForm("insert_position", "Information", FormMethod.Post);}
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                รหัส
                                            </div>
                                            <div class="col-sm-4">
                                               @Html.TextBox("ps_code", "", new { @class = "form-control" })
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                ตำแหน่ง
                                            </div>
                                            <div class="col-sm-10">
                                                @Html.TextBox("ps_name", "", new { @class = "form-control" })
                                            </div>

                                        </div>
                                    </div>
                                   
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">ยกเลิก</button>
                                        <input type="submit" class="btn btn-primary" value="บันทึกข้อมูล"/>
                                    </div>
                                    @{ Html.EndForm();}
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                    </div>
                    <!-- /.modal -->


                    <table class="table table-bordered dataTables_wrapper form-inline dt-bootstrap data_table text-center">
                        <thead>
                            <tr>
                                <th>ลำดับ</th>
                                <th>รหัส</th>
                                <th>ตำแหน่ง</th>
                                <th><span><i class="fa fa-gears"></i></span>จัดการ</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1;}
                        @foreach (var item in ViewData["position"] as List<positionModel>)
                        {
                            <tr>
                                
                                <td>@i</td>
                                <td>@item.ps_code</td>
                                <td>@item.ps_name</td>
                                <td>
                                    <a class="btn btn-primary view_ps" ref="@item.ps_id" data-toggle="modal" data-target="#MymodalView"><i class="fa fa-file"></i> รายละเอียด</a>
                                    <a class="btn btn-warning edit_ps" ref="@item.ps_id" data-toggle="modal" data-target="#MymodalEditPosition"><i class="fa fa-edit"></i> แก้ไข</a>
                                    <a class="btn btn-danger del_ps" ref="@item.ps_id"><i class="fa fa-trash"></i> ลบ</a>
                                </td>

                            </tr>
                            i++;
                        }
                         </tbody> 
                    </table>

                    <div class="modal fade" id="MymodalView">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title  text-center">รายละเอียด</h4>
                                </div>
                                <div class="modal-body">                                    
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                รหัส :
                                            </div>
                                            <div class="col-sm-10 ps_code_view">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                ตำแหน่ง :
                                            </div>
                                            <div class="col-sm-10 ps_name_view">
                                            </div>

                                        </div>
                                    </div>

                                    <div class="modal-footer  text-center">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">ยกเลิก</button>
                                    </div>
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                    </div>
                    <div class="modal fade" id="MymodalEditPosition">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title">เพิ่ม  ตำแหน่ง</h4>
                                </div>
                                <div class="modal-body">
                                    @{ Html.BeginForm("edit_position", "Information", FormMethod.Post);}
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                รหัส
                                            </div>
                                            <div class="col-sm-4">
                                                @Html.TextBox("ps_code_edit", "", new { @class = "form-control" })
                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                ตำแหน่ง
                                            </div>
                                            <div class="col-sm-10">
                                                @Html.TextBox("ps_name_edit", "", new { @class = "form-control" })
                                                @Html.TextBox("ps_id", "", new { @class = "form-control" ,@type="hidden"})
                                            </div>

                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">ยกเลิก</button>
                                        <input type="submit" class="btn btn-primary" value="บันทึกข้อมูล" />
                                    </div>
                                    @{ Html.EndForm();}
                                </div>
                                <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
<script>
    $(document).on('click', '.view_ps', function () {

        var x = $(this).attr('ref');

        $.get('../../Information/view_position?id=' + x, function (data) {

            var res = data.split("^");
            
            $('.ps_code_view').text(res[0]);
            $('.ps_name_view').text(res[1]);
        })

    })
</script>
<script>
    $(document).on('click', '.edit_ps', function () {


        var x = $(this).attr('ref');
        $('#ps_id').val(x);

        $.get('../../Information/view_position?id=' + x, function (data) {

            var res = data.split("^");

            $('#ps_code_edit').val(res[0]);
            $('#ps_name_edit').val(res[1]);
           
        })


    })
</script>
<script>
    $(document).on('click', '.del_ps', function () {

        var x = $(this).attr('ref');

        swal({
            title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
           // text: "คุณจะไม่่สามารถ",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel plx!",
            closeOnConfirm: false,
            closeOnCancel: false
        },
function (isConfirm) {
    if (isConfirm) {

        $.get('../../Information/del_positon?id=' + x, function () {

            swal("ลบข้อมูลเรียบร้อย!", "", "success");
            location.reload();
        })
      
    } else {
        swal("ยกเลิก", "", "error");
    }
});
        
        
    })
</script>