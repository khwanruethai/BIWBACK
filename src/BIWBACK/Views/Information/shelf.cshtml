@{
    Layout = "_Layout";
}
@using BIWBACK.Models
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        ข้อมูลชั้นวางสินค้า/วัตถุดิบ
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> ข้อมูลหลัก</a></li>
        <li class="active"> ข้อมูลชั้นวางสินค้า/วัตถุดิบ</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> ชั้นวางสินค้า/วัตถุดิบ </h3>
                </div>
                <!-- /.box-header -->
                      <div class="text-right">
                        <a class="btn btn-primary" data-toggle="modal" data-target="#Mymodal"><i class="fa fa-plus-square-o"></i> เพิ่ม คลังสินค้า/วัตถุดิบ</a>
                        <br /><br />
                    </div>
                <div class="box-body">
              
                        <!--Modal-->
                        <div class="modal fade" id="Mymodal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <h4 class="modal-title">เพิ่ม ชั้นวางสินค้า/วัตถุดิบ</h4>
                                    </div>
                                    @{ Html.BeginForm("insert_shelf", "Information", FormMethod.Post);}
                                    <div class="modal-body">

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    รหัส
                                                </div>
                                                <div class="col-sm-9">
                                                  @Html.TextBox("sh_code", ViewData["sh_code"], new { @class = "form-control", @readonly = true })
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    คลังสินค้า
                                                </div>
                                                <div class="col-sm-9">
                                                @Html.DropDownList("sh_store", ViewData["store"] as List<SelectListItem>, new { @class = "form-control" })
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    ชั้นวางสินค้า/วัตถุดิบ
                                                </div>
                                                <div class="col-sm-9">
                                                   @Html.TextBox("sh_name", "", new { @class = "form-control" })
                                                </div>

                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">ยกเลิก</button>
                                            <button type="submit" class="btn btn-primary"><span><i class="fa fa-save"></i></span> บันทึกข้อมูล</button>
                                        </div>
                                    </div>
                                    @{ Html.EndForm();}
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            </div>
                            <!-- /.modal -->
                       

                        <table id="example2" class="table table-bordered data_table">
                            <thead>
                                <tr>
                                    <th>ลำดับ</th>
                                    <th>รหัส</th>
                                    <th>ชั้นวางสินค้า/วัตถุดิบ</th>
                                    <th>ชื่อคลัง</th>
                                    <th><span><i class="fa fa-gears"></i></span> จัดการ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1;}
                                @foreach(var item in ViewData["shelf"] as List<shelfModel>){ 
                                <tr>
                                    <td>@i</td>
                                    <td>@item.shelf_code</td>
                                    <td>@item.shelf_name</td>
                                    <td>@item.store_name</td>
                                    <td>
                                    <a class="btn btn-warning edit_sh" ref="@item.shelf_id" data-toggle="modal" data-target="#MymodalEditShelf"><i class="fa fa-edit"></i> แก้ไข</a>
                                    <a class="btn btn-danger del_sh" ref="@item.shelf_id"><i class="fa fa-trash"></i> ลบ</a>
                                    </td>
                                </tr>
                                    i++;
                                }
                               </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        </div>
        <!-- /.row -->
</section>
  <!--Modal-->
<div class="modal fade" id="MymodalEditShelf">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">แก้ไข ชั้ยวางสินค้า/วัตถุดิบ</h4>
            </div>
            @{ Html.BeginForm("update_shelf", "Information", FormMethod.Post);}
            <div class="modal-body">

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            รหัส
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("sh_code_edit", "", new { @class = "form-control", @readonly = true })
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            คลังสินค้า
                        </div>
                        <div class="col-sm-9">
                            @Html.DropDownList("sh_store_edit", ViewData["store"] as List<SelectListItem>, new { @class = "form-control" })
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            ชั้นวางสินค้า/วัตถุดิบ
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBox("sh_name_edit", "", new { @class = "form-control" })
                        </div>

                    </div>
                </div>
                @Html.TextBox("sh_id","",new { @class="form-control"})
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">ยกเลิก</button>
                    <button type="submit"><span><i class="fa fa-save"></i></span> บันทึกข้อมูล</button>
                </div>
            </div>
            @{ Html.EndForm();}
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>
<!-- /.modal -->
<!-- /.content -->

<script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
<script>
    $(document).on('click', '.edit_sh', function () {

        var x = $(this).attr('ref');

        $('#sh_id').val(x);

        $.get('../../Information/select_shelf?id=' + x, function (data) {

            var res = data.split('^');

            $('#sh_code_edit').val(res[0]);
            $('#sh_store_edit').val(res[1]);
            $('#sh_name_edit').val(res[2]);

        })


    })
</script>
<script>
    $(document).on('click', '.del_sh', function () {

        var x = $(this).attr('ref');

        swal({
            title: "คุณต้องการลบข้อมูลนี้ใช่หรือไม่?",
            // text: "คุณจะไม่่สามารถ",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel plx!",
            closeOnConfirm: false,
            closeOnCancel: false
        },
        function (isConfirm) {
            if (isConfirm) {

                $.get('../../Information/del_shelf?id=' + x, function () {

                    swal("ลบข้อมูลเรียบร้อย!", "", "success");
                    location.reload();
                })

            } else {
                swal("ยกเลิก", "", "error");
            }
        });

    });
</script>  