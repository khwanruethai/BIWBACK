                                        <a class="btn btn-danger del_sale" ref="@item.emp_sale_id"><i class="fa fa-trash"></i> ลบ</a>
                                    </td>
                                </tr>
                                    i++;
                                }
                              

                        </table>
                    </div>
                </div>
                <div class="col-md-6">
